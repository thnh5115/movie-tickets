# Database Configuration cho Spring Boot
# Copy file này thành .env và điền các giá trị thực tế

# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=movie_tickets_db
DB_USERNAME=movie_app
DB_PASSWORD=movie_pass123

# MySQL Root (cho admin tasks)
DB_ROOT_PASSWORD=root123

# Spring Boot Datasource Configuration
# Sử dụng các biến này trong application.properties hoặc application.yml
SPRING_DATASOURCE_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?useSSL=false&serverTimezone=Asia/Ho_Chi_Minh&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=${DB_USERNAME}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}

# HikariCP Connection Pool Settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=300000

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Timezone
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_TIME_ZONE=Asia/Ho_Chi_Minh

# phpMyAdmin Configuration
PMA_HOST=mysql
PMA_PORT=3306
